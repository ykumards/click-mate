{
  "manifest_version": 2,
 
  "name": "Click-mate",
  "version": "1.0.0",
  "author": "Yogesh Kumar, Preeti Bhandari",
  "description": "A chrome app to identify clickbait",
  
  "background": {"scripts": ["facebook.js"]},
  "browser_action": {
    "default_icon": "click_64.png",
    "default_title": "clickmate"
  },

  "icons": {
    "128": "click_128.png",
    "64" : "click_64.png",
    "32" : "click_32.png",
    "16" : "click_16.png"
  },

  "permissions": [
    "http://www.facebook.com/*",
    "https://www.facebook.com/*",
    "https://click-mate.com/*",
    "https://clickmate.herokuapp.com/*"
   ],
 
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["facebook.js"],
    "matches": ["http://www.facebook.com/*",
    			"https://www.facebook.com/*"]
  }],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "web_accessible_resources": ["styles.css"]
 
}