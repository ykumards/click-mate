{
  "manifest_version": 2,
 
  "name": "Click-mate",
  "version": "0.1.0",
  "author": "Yogesh Kumar, Preeti Bhandari",
  "description": "A chrome app to identify clickbait",
  
  "background": {"scripts": ["background.js"]},
  "browser_action": {
    "default_icon": "click_64.png",
    "default_title": "clickmate"
  },

  "icons": {
    "128": "click_128.png",
    "32" : "click_32.png"
  },

  "permissions": [
    "http://www.facebook.com/*",
    "https://www.facebook.com/*",
    "https://click-mate.com/*"
   ],
 
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["facebook.js"],
    "matches": ["http://www.facebook.com/*",
    			"https://www.facebook.com/*"]
  }]
 
}